---
title: Le Wagon - Middleman
---

<% drivers_array = data.drivers.to_a %>
<% random_array = drivers_array[rand(0..(drivers_array.length)-1)] %>
<% random = random_array[0] %>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://loremflickr.com/g/1920/1080/<%= random %>,city/all');">
  <div class="banner-content">
    <h1>Le Wagon <%= random.capitalize %></h1>
    <p>Learn to code with us in <%= random.capitalize %></p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>
<div class="container">
  <div class="row">
      <% data.drivers.each do |city, place| %>
        <div class="col-md-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/<%= city %>');">
          <div class="card-category"><%= place.country %></div>
          <div class="card-description">
            <h2>Le Wagon <%= city.capitalize %></h2>
            <p><%= place.quote %></p>
          </div>
          <img class="card-user" src="https://avatars3.githubusercontent.com/u/<%= place.avatar %>?v=4" alt="">
          <a class="card-link" href="#" ></a>
        </div>
      </div>
      <% end %>
  </div>
</div>

