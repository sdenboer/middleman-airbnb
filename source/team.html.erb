 <h1 style="text-align: center">TEAM</h1>

<div class="container">
  <div class="row">
      <% data.team.each do |gh_username, value| %>
        <div class="col-xs-6 col-sm-4 col-md-3" style="text-align: center">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://cdn.countryflags.com/thumbs/<%=value.hometown%>/flag-400.png');">
           <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{gh_username}", class: "avatar-large" %>
          <h3 style="text-align: center"><%= gh_username%></h3>
          </div>
        </div>
      <% end %>
  </div>
</div>

